<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xmlns:xsi="http://www.w3.org/2001/XML_schema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframdwork.org/schema/beans/spring-xsd
  http://www.springframdwork.org/schema/mvc
  http://www.springframdwork.org/schema/mvc/spring-mvc.xsd
  http://www.springframdwork.org/schema/context
  http://www.springframdwork.org/schema/context/spring-context.xsd">
  
  
  <mvc:annotation-driven/>
  <context:component-scan base-package="com.niit"/>
  <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
  <property name="prefix">
  <value>/WEB-INF/views/</value>
  </property>
<property name="sufix">
  <value>.jsp</value>
  </property>
  </bean>
  </beans>